<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroud"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/backgroud"
        android:orientation="horizontal">

        <TextView
            style="@style/secondTitleBlack"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="户号" />

        <TextView
            style="@style/secondTitleBlack"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.7"
            android:gravity="center"
            android:text="姓名" />

        <TextView
            style="@style/secondTitleBlack"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="手机号" />

        <TextView
            style="@style/secondTitleBlack"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.8"
            android:gravity="center"
            android:text="余额" />
    </LinearLayout>

    <com.android.blm.watermeter.widget.swipelistview.LJListView
        android:id="@+id/list_own_user"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/backgroud" />

    <LinearLayout
        android:id="@+id/ll_bottom"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/orange"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_bottom"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@mipmap/close_valve" />

        <TextView
            android:id="@+id/txt_bottom"
            style="@style/secondTitleWhite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="关阀" />
    </LinearLayout>

</LinearLayout>