<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/backgroud">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_user_name"
                style="@style/secondTitleBlack"
                android:layout_width="0dp"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:layout_weight="0.6"
                android:text="姓名" />

            <TextView
                android:id="@+id/txt_user_no"
                style="@style/secondTitleBlack"
                android:layout_width="0dp"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="22222222222" />

            <TextView
                android:id="@+id/txt_user_phone"
                style="@style/secondTitleBlack"
                android:layout_width="0dp"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="11111111111" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_meter_no"
                style="@style/secondTitleBlack"
                android:layout_width="0dp"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="姓名" />

            <TextView
                android:id="@+id/txt_meter_type"
                style="@style/secondTitleBlack"
                android:layout_width="0dp"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:layout_weight="0.8"
                android:text="热水表" />

            <TextView
                android:id="@+id/txt_meter_state"
                style="@style/secondTitleBlack"
                android:layout_width="0dp"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:layout_weight="0.7"
                android:text="开阀" />
            <TextView
                android:id="@+id/txt_money"
                style="@style/secondTitleOrange"
                android:layout_width="0dp"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:text="140" />
        </LinearLayout>
        <TextView
            android:id="@+id/txt_user_address"
            android:layout_width="match_parent"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:text="地址信息"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            style="@style/contentBlack"
            android:layout_height="wrap_content" />
    </LinearLayout>
</RelativeLayout>