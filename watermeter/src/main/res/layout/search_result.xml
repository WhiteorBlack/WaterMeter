<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroud"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        android:orientation="horizontal">

        <FrameLayout
            android:id="@+id/fl_back"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:onClick="waterClick">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@mipmap/search_back" />
        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/search_bar"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_type"
                style="@style/contentBlack"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:drawablePadding="2dp"
                android:drawableRight="@mipmap/type_bottom_arrow"
                android:gravity="center"
                android:onClick="waterClick"
                android:text="全部" />

            <EditText
                android:id="@+id/edt_search"
                style="@style/contentBlack"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@null"
                android:hint="请输入要搜索的内容"
                android:imeOptions="actionSearch"
                android:lines="1"
                android:paddingLeft="8dp"
                android:singleLine="true" />

            <FrameLayout
                android:id="@+id/fl_search"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:onClick="waterClick">

                <ImageView
                    android:id="@+id/img_search"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@mipmap/search" />
            </FrameLayout>
        </LinearLayout>

        <Button
            android:id="@+id/btn_search"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:layout_gravity="right|center_vertical"
            android:layout_marginRight="5dp"
            android:background="@drawable/search_bar"
            android:text="搜索"
            android:visibility="gone" />
    </LinearLayout>

    <com.android.blm.ymxn.widget.LoadMoreRecyclerView
        android:id="@+id/recyclerView_search"
        android:layout_width="match_parent"
        android:visibility="gone"
        android:layout_height="wrap_content" />
    <com.android.blm.ymxn.widget.swipelistview.LJListView
        android:id="@+id/ljlistview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>